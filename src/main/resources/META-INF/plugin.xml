<idea-plugin>
    <id>gray_team.kotoed_plugin</id>
    <name>Kotoed plugin</name>
    <version>0.8.3</version>
    <vendor email="neon-pf@yandex.ru">gray_team</vendor>

    <description><![CDATA[
    plugin for kotoed system
    ]]></description>


    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Kotoed" anchor="right" factoryClass="plugin.gui.KotoedContext"/>
        <codeInsight.lineMarkerProvider language="JAVA" implementationClass="plugin.gui.Utils.KotoedLineMarkerProvider"/>
    </extensions>

    <actions>
    </actions>

    <depends>com.intellij.modules.lang</depends>
    <depends>Git4Idea</depends>
</idea-plugin>